<div class="row">
  <div class="large-12 columns forum-nav">
    <%= link_to 'New Post', new_topic_post_path(@topic, @post), class: "new-btn" %>

    <div class="right">
      <%= link_to 'Forum Index', topics_path %>  >> 
      <%= @topic.title %>  
    </div>

    </div>
  </div>


<div class="row">
  <div class="large-12 columns">
    <table class="posts large-12 columns">
      <tr>
        <th scope="column">Post</th>
        <th scope="column">Author</th>
        <th scope="column">Comments</th>
        <th scope="column">Last Comment</th>
      </tr>


      <% if @posts %>
        <%= render 'shared/posts' %>
      <% end %>


    </table>
  </div>
</div>