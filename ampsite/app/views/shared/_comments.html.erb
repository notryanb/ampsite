<% @comments.each do |comment| %>
<tr>
  <th class="table-subheader"><%= comment.user.username %></th>
  <th class="table-subheader">Subject: <%= @post.title %>  
    <div class="right">Posted: <%= comment.created_at.strftime("%b . %d . %Y") %>
    </div>
  </th>
</tr>
<tr>
  <td class="user-info">
    <% if comment.user.avatar.url != "/avatars/original/missing.png" %>
      <%= image_tag comment.user.avatar.url(:thumb) %> 
    <% end %>
    <div>
      <b>Posts:</b> <%= comment.user.post_and_comment_count %>
    </div>
    <div>
      <b>Location:</b> <%= comment.user.location %>
    </div>
  </td>
  
  <td class="td-content"><%= comment.content %></td>
</tr>
<% end %>