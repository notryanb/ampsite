<div class="row">
  <div class="large-12 columns forum-nav">
  <%= link_to 'New Comment', new_topic_post_comment_path(@topic, @post, @comment), class: "new-btn" %>

  <%= link_to 'Forum Index', topic_path %> >>
  <%= link_to @post.topic.title, topic_path(@topic) %> 
  </div>
  </div>


<div class="row">
  <div class="large-12 columns">
    <table class="posts large-12 columns">
      <caption>Welcome to the <%= @topic.title %> Discussion Forum.</caption>
      <tr>
        <th class="table-header" scope="column">Author</th>
        <th class="table-header" scope="column">Message</th>
      </tr>
      <tr>
        <th class="table-header"><%= @post.user.username %></th>
        <th class="table-header"><%= @post.title %> | Posted: <%= @post.created_at.strftime("%b . %d . %Y") %></th>
      </tr>

      <tr>
        <th></th>
        <th><%= @post.content %></th>
      </tr>


      <% if @comments %>
        <% @comments.each do |comment| %>
        <tr>
          <th class="table-header"><%= @post.user.username %></th>
          <th class="table-header">Subject: <%= @post.title %> | Posted: <%= @post.created_at.strftime("%b . %d . %Y") %></th>
        </tr>
        <tr>
          <td>Avatar and User content</td>
          <td><%= comment.content %></td>
        </tr>
        <% end %>
      <% end %>

    </table>
  </div>
</div>