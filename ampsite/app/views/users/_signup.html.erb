<%= form_for :user, url: signup_path do |f| %>
  <%= f.label :username %><br/>
  <%= f.text_field :username %><br/><br/>

  <%= f.label :email %><br/>
  <%= f.text_field :email %><br/><br/>

  <%= f.label :password %><br/>
  <%= f.text_field :password %><br/><br/>

  <%= f.label :password_confirm %><br/>
  <%= f.text_field :password_confirm %><br/><br/>
  <%= f.submit "Sign up!" %>

<% end %>