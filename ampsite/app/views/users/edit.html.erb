<div class="row">
  <div class="columns small-12">

    <div class="columns small-3 dash-menu">
          <%= render 'usernav' %>
    </div>

    <div class="columns pull-3 small-4 dash-focus" >
          <%= form_for @user, :method => 'PUT', :url => user_path(@user), :html => { :multipart => true }  do |f| %>

            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :new_password %>
            <%= f.password_field :password %>

            <%= f.label :new_password_confirmation %>
            <%= f.password_field :password_confirmation %>

            <%= f.submit :submit %>
          <% end %>
    </div>

  </div>
</div>