<%= link_to "Home", root_path %>

<div class="login-error">
  <% if @err %>
    <%= @err %>
  <% end %>
</div>

<%= form_for :user, url: login_path do |f| %>

  <%= f.label :user %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log In" %>
<% end %>